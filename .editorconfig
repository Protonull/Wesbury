# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.{md,mdx}]
max_line_length = 80
indent_size = 2

